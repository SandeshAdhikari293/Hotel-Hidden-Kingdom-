@model IEnumerable<Hotel.Models.Room>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<div class="flex justify-center items-center text-center mb-12 gap-4">
    <h1 class="font-libre mb-2">Rooms</h1>
    <a asp-action="Add" class="mb-16 font-caladea focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800">Add new</a>

</div>

<div class="flex justify-center items-center text-center">
    @if (Model.Count() == 0)
    {
        <p class="mb-2">You do not have any rooms defined!</p>
    }
</div>
<div class="flex justify-center items-center text-center">
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        #
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Number
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Type
                    </th>
                    <th scope="col" class="px-6 py-3">
                        <span class="sr-only">Edit</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                }
                @foreach (Room room in Model)
                {
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                            @count
                        </th>
                        <td class="px-6 py-4">
                            @room.Number
                        </td>
                        <td class="px-6 py-4">
                            @room.RoomType.Name
                        </td>
                        <td class="px-6 py-4 text-right">
                            <a asp-action="Edit" asp-route-id="@room.Id" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>