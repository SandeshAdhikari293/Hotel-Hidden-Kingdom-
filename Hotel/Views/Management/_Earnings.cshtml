@model Statistics

@{
    int days = ((int)Model.Filter);
}

<div class="flex justify-between">
    <div>
        <h5 class="leading-none text-3xl font-bold text-gray-900 dark:text-white pb-2">$@Model.getEarningsRange(days)</h5>
        <p class="text-base font-normal text-gray-500 dark:text-gray-400">Sales in @days days </p>
    </div>
    <div class="flex items-center px-2.5 py-0.5 text-base font-semibold text-green-500 dark:text-green-500 text-center">
        @Model.increaseInEarnsFromLastWeek()%
        <svg class="w-3 h-3 ml-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13V1m0 0L1 5m4-4 4 4" />
        </svg>
    </div>
</div>
<div id="area-chart"></div>

<script>
    
    // ApexCharts options and config
    function formatLegend(legend) {
        legend = legend.substring(1);
        return legend.split(',');
    }

    function formatData(str) {
        str = str.substring(1);
        data = str.split(',');

        output = [];
        for (var i = 0; i < data.length; i++) {
            output[i] = parseFloat(data[i]);
        }

        return output;
    }

    var data = [];
    var legend = [];

    data = formatData('@(Model.getEarnings((int)Model.Filter))');
    legend = formatLegend('@(Model.getLegend((int)Model.Filter))');

        var options = {
            chart: {
                height: "100%",
                maxWidth: "100%",
                type: "area",
                fontFamily: "Inter, sans-serif",
                dropShadow: {
                    enabled: false,
                },
                toolbar: {
                    show: false,
                },
            },
            tooltip: {
                enabled: true,
                x: {
                    show: false,
                },
            },
            fill: {
                type: "gradient",
                gradient: {
                    opacityFrom: 0.55,
                    opacityTo: 0,
                    shade: "#1C64F2",
                    gradientToColors: ["#1C64F2"],
                },
            },
            dataLabels: {
                enabled: false,
            },
            stroke: {
                width: 6,
            },
            grid: {
                show: false,
                strokeDashArray: 4,
                padding: {
                    left: 2,
                    right: 2,
                    top: 0
                },
            },
            series: [
                {
                    name: "Revenue",
                    data: data,
                    color: "#1A56DB",
                },
            ],
            xaxis: {
                categories: legend,
                labels: {
                    show: false,
                },
                axisBorder: {
                    show: false,
                },
                axisTicks: {
                    show: false,
                },
            },
            yaxis: {
                show: false,
            },
        }

        if (document.getElementById("area-chart") && typeof ApexCharts !== 'undefined') {
            const chart = new ApexCharts(document.getElementById("area-chart"), options);
            chart.render();
        }


</script>