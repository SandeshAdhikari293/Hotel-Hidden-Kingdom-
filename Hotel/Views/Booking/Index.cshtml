@{
    ViewData["Title"] = "Hotel Hidden Kingdom";
}

<div class="flex flex-col p-4 text-center justify-center items-center">
    <div>
        <h1>Stay with us</h1>

    </div>


    <div class="">
        <ol class="items-center w-full space-y-4 sm:flex sm:space-x-8 sm:space-y-0">
            <li class="flex items-center text-blue-600 dark:text-blue-500 space-x-2.5">
                <span class="flex items-center justify-center w-8 h-8 border border-blue-600 rounded-full shrink-0 dark:border-blue-500">
                    1
                </span>
                <span>
                    <h3 class="font-medium leading-tight">Travel information</h3>
                    <p class="text-sm">Step details here</p>
                </span>
            </li>
            
            <li class="flex items-center text-gray-500 dark:text-gray-400 space-x-2.5">
                <span class="flex items-center justify-center w-8 h-8 border border-gray-500 rounded-full shrink-0 dark:border-gray-400">
                    2
                </span>
                <span>
                    <h3 class="font-medium leading-tight">Room selection</h3>
                    <p class="text-sm">Step details here</p>
                </span>
            </li>
            <li class="flex items-center text-gray-500 dark:text-gray-400 space-x-2.5">
                <span class="flex items-center justify-center w-8 h-8 border border-gray-500 rounded-full shrink-0 dark:border-gray-400">
                    3
                </span>
                <span>
                    <h3 class="font-medium leading-tight">Confirmation</h3>
                    <p class="text-sm">Step details here</p>
                </span>
            </li>
        </ol>
    </div>

</div>

<div class="flex md:flex-row flex-col justify-center justify-stretch gap-5 p-4">
    <div>
        <div class="flex w-full items-center justify-center bg-blue-100">
            <form asp-action="SearchBooking" method="post" autocomplete="off">
                <div date-rangepicker class="mb-6 flex items-center">
                    <div class="relative">
                        <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                            <svg class="h-4 w-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z" />
                            </svg>
                        </div>
                        <input id="in" name="checkIn" type="text" class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 pl-10 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-blue-500 dark:focus:ring-blue-500" placeholder="Select date start" datepicker-format="dd/mm/yyyy" required />
                    </div>
                    <span class="mx-4 text-gray-500">to</span>
                    <div class="relative">
                        <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                            <svg class="h-4 w-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z" />
                            </svg>
                        </div>
                        <input id="out" name="checkOut" type="text" class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 pl-10 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-blue-500 dark:focus:ring-blue-500" placeholder="Select date end" datepicker-format="dd/mm/yyyy" required />
                    </div>
                </div>
                <div class="flex flex-col items-center">
                    <div class="flex items-center justify-center">
                        <div class="mb-6 w-32">
                            <label for="ppl" class="mb-2 block text-sm font-medium text-gray-900 dark:text-white">How many people?</label>
                            <input asp-for="People" type="number" min="1" max="20" value="2" id="ppl" class="sm:text-md block w-full rounded-lg border border-gray-300 bg-gray-50 p-4 text-gray-900 focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-blue-500 dark:focus:ring-blue-500" />
                        </div>
                        <span class="mx-4 text-gray-500">and</span>
                        <div class="mb-6 w-32">
                            <label for="rms" class="mb-2 block text-sm font-medium text-gray-900 dark:text-white">How many rooms?</label>
                            <input asp-for="RoomCount" type="number" min="1" max="5" value="1" id="rms" class="sm:text-md block w-full rounded-lg border border-gray-300 bg-gray-50 p-4 text-gray-900 focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-blue-500 dark:focus:ring-blue-500" />
                        </div>
                    </div>
                    <div class="mb-6">
                        <input type="submit" class="mb-2 mr-2 rounded-lg border border-red-700 px-5 py-2.5 text-center text-sm font-medium text-red-700 hover:bg-red-800 hover:text-white focus:outline-none focus:ring-4 focus:ring-red-300 dark:border-red-500 dark:text-red-500 dark:hover:bg-red-600 dark:hover:text-white dark:focus:ring-red-900" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="flex w-full items-center justify-center bg-blue-200">
        <h2>
            <iframe class="" 
                id="map"
                    frameborder="0" style="border:0"
                    referrerpolicy="no-referrer-when-downgrade"
                    src="https://maps.google.com/maps?output=embed&amp;q=Hotel%20Hidden%20Kingdom&amp;z=15&amp;t=m" data-map="JTdCJTIyYWRkcmVzcyUyMiUzQSUyMkhvdGVsJTIwSGlkZGVuJTIwS2luZ2RvbSUyMiUyQyUyMnpvb20lMjIlM0ExNSUyQyUyMnR5cGVJZCUyMiUzQSUyMnJvYWQlMjIlMkMlMjJsYW5nJTIyJTNBJTIyJTIyJTdE"
                    allowfullscreen>
            </iframe>
        </h2>
    </div>
    <div class="flex items-center justify-center bg-blue-100">
        <h1>Information</h1>
    </div>
</div>



<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/datepicker.min.js"></script>
<script>
    const inPicker = document.getElementById('in');
    const outPicker = document.getElementById('out');

    new Datepicker(inPicker, {
        todayHighlight: true,
        minDate: new Date()
    });

    new Datepicker(outPicker, {
        todayHighlight: true,
        minDate: new Date()
    });
</script>