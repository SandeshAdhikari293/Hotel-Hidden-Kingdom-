@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <div class="flex justify-center w-full max-w-sm mx-auto overflow-hidden bg-white rounded-lg shadow-lg dark:bg-gray-800 lg:max-w-4xl">
                <div class="hidden bg-cover lg:block lg:w-1/2" style="background-image: url('https://images.unsplash.com/photo-1606660265514-358ebbadc80d?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1575&q=80');"></div>

                    <div class="w-full px-6 py-8 md:px-8 lg:w-1/2">
                    <div class="flex justify-center mx-auto">
                        <img class="w-auto h-7 sm:h-8" src="~/img/simplelogoOR.png" alt="">
                    </div>

                    <p class="mt-3 text-xl text-center text-gray-600 dark:text-gray-200">
                        Logout
                    </p>
                    <p class="mt-3 text-m text-center text-gray-600 dark:text-gray-200">
                        Please proceed to log-out
                    </p>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="mt-6">
                        <button type="submit" class="w-full px-6 py-3 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-gray-800 rounded-lg hover:bg-gray-700 focus:outline-none focus:ring focus:ring-gray-300 focus:ring-opacity-50">
                            Log-out
                        </button>
                    </div>

                    <div class="flex items-center justify-between mt-4">
                        <span class="w-1/5 border-b dark:border-gray-600 md:w-1/4"></span>

                        <a asp-controller="Home" asp-action="Index" class="text-xs text-gray-500 uppercase dark:text-gray-400 hover:underline">or return home page</a>

                        <span class="w-1/5 border-b dark:border-gray-600 md:w-1/4"></span>
                    </div>
                </div>
            </div>
        </form>
    }
    else
    {
        <div class="flex justify-center w-full max-w-sm mx-auto overflow-hidden bg-white rounded-lg shadow-lg dark:bg-gray-800 lg:max-w-4xl">
            <div class="hidden bg-cover lg:block lg:w-1/2" style="background-image: url('https://images.unsplash.com/photo-1606660265514-358ebbadc80d?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1575&q=80');"></div>

            <div class="w-full px-6 py-8 md:px-8 lg:w-1/2">
                <div class="flex justify-center mx-auto">
                    <img class="w-auto h-7 sm:h-8" src="~/img/simplelogoOR.png" alt="">
                </div>

                <p class="mt-3 text-xl text-center text-gray-600 dark:text-gray-200">
                    Oops! You aren't signed in
                </p>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="mt-6">
                    <button type="submit" class="w-full px-6 py-3 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-gray-800 rounded-lg hover:bg-gray-700 focus:outline-none focus:ring focus:ring-gray-300 focus:ring-opacity-50">
                        ?_?
                    </button>
                </div>

                <div class="flex items-center justify-between mt-4">
                    <span class="w-1/5 border-b dark:border-gray-600 md:w-1/4"></span>

                    <a asp-controller="Home" asp-action="Index" class="text-xs text-gray-500 uppercase dark:text-gray-400 hover:underline">or return home page</a>

                    <span class="w-1/5 border-b dark:border-gray-600 md:w-1/4"></span>
                </div>
            </div>
        </div>
    }
</header>
